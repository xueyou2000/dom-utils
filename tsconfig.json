    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dts",
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es6", "dom"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src/*"]
}
