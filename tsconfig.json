{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dts",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src/*"]
}
